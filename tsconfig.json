{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "backend/**/*.ts",
        "jobs/**/*.ts",
        "services/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}